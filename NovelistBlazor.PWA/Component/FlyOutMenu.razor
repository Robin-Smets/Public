@inherits ComponentBase
@using NovelistBlazor.PWA.Component
@using NovelistBlazor.PWA.Component.Svg



    <div class="absolute left-1/2 z-10 mt-5 flex w-screen max-w-min -translate-x-1/2 px-4 @GetAnimationClasses()">
        <div class="w-56 shrink rounded-xl bg-white p-4 text-sm font-semibold leading-6 text-gray-900 shadow-lg ring-1 ring-gray-900/5">
            <a href="#" class="block p-2 hover:text-indigo-600">Analytics</a>
            <a href="#" class="block p-2 hover:text-indigo-600">Engagement</a>
            <a href="#" class="block p-2 hover:text-indigo-600">Security</a>
            <a href="#" class="block p-2 hover:text-indigo-600">Integrations</a>
            <a href="#" class="block p-2 hover:text-indigo-600">Automations</a>
            <a href="#" class="block p-2 hover:text-indigo-600">Reports</a>
        </div>
    </div>


@code {
    private bool isFlyoutVisible = false;

    public void ToggleFlyout()
    {
        isFlyoutVisible = !isFlyoutVisible;
        StateHasChanged();
    }

    private string GetAnimationClasses()
    {
        if (isFlyoutVisible)
        {
            return "transition ease-out duration-200 opacity-100 translate-y-0";
        }
        else
        {
            return "transition ease-in duration-150 opacity-0 translate-y-1";
        }
    }
}
